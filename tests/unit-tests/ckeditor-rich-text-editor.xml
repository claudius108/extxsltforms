<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="../resources/xsltforms/xsltforms.xsl" type="text/xsl"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:exfk="http://kuberam.ro/exsltforms" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events">
    <head>
        <title>CKEditor</title>
        <style language="text/css">
		@namespace xf url("http://www.w3.org/2002/xforms");
		#triggerHome {float:left; margin-bottom:25px;}
		#outputSavedContent .xforms-label {margin-bottom:25px;margin-right:490px;font:bold 14px verdana;}
</style>
        <xf:model id="m">
            <xf:instance id="i0">
                <v xmlns="">
                    <description>
				&lt;p&gt;&lt;strong&gt;&lt;span style="font-size: 16px;"&gt;Instructions for testing the integration of CKEditor into XSLTForms&lt;/span&gt;&lt;/strong&gt;&lt;/p&gt;
				&lt;p&gt;In order to save the editor content to bounded node, please modify this text and leave the editor.&lt;/p&gt;
			</description>
                </v>
            </xf:instance>
        </xf:model>
    </head>
    <body>
        <xf:trigger id="triggerHome">
            <xf:label>Home</xf:label>
            <xf:action ev:event="DOMActivate">
                <xf:load resource="../../index/index.xml"/>
            </xf:action>
        </xf:trigger>
        <p>
            <xf:output id="outputSavedContent" ref="instance('i0')/description">
                <xf:label>Saved editor content: </xf:label>
            </xf:output>
        </p>
        <p>
            <xf:textarea ref="instance('i0')/description" appearance="exfk:CKEditor" incremental="true">
                <xf:label>CKEditor editor 1 (it has @incremental = "true"):</xf:label>
                <xf:extension><!--, entities_additional: '#160'-->
                    <exfk:rteOptions>{skin:'office2003'}</exfk:rteOptions>
                </xf:extension>
            </xf:textarea>
        </p>
        <xf:textarea ref="instance('i0')/description" appearance="exfk:CKEditor">
            <xf:label>CKEditor editor 2:</xf:label>
            <xf:extension>
                <exfk:rteOptions>
				{
				skin:'v2'
				}
			</exfk:rteOptions>
            </xf:extension>
        </xf:textarea>
<!--        <p>
            <xf:textarea ref="instance('i0')/description" appearance="exfk:CKEditor">
                <xf:label>CKEditor editor 3:</xf:label>
                <xf:extension>
                    <exfk:rteOptions>skin:'office2003'</exfk:rteOptions>
                </xf:extension>
            </xf:textarea>
        </p>
        <p>
            <xf:textarea ref="instance('i0')/description" appearance="exfk:CKEditor">
                <xf:label>CKEditor editor 4:</xf:label>
                <xf:extension>
                    <exfk:rteOptions>skin:'office2003'</exfk:rteOptions>
                </xf:extension>
            </xf:textarea>
        </p>-->
    </body>
</html>